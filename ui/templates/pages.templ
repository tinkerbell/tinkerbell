		<!-- Inline script for form submission -->
		<script>
			function toggleErrorDetails() {
				const details = document.getElementById('loginErrorDetails');
				const arrow = document.getElementById('errorDetailsArrow');
				const isCollapsed = details.classList.contains('max-h-0');
				
				if (isCollapsed) {
					details.classList.remove('max-h-0');
					details.classList.add('max-h-96');
					arrow.classList.add('rotate-180');
				} else {
					details.classList.add('max-h-0');
					details.classList.remove('max-h-96');
					arrow.classList.remove('rotate-180');
				}
			}

			function toggleTokenInstructions() {
				const instructions = document.getElementById('tokenInstructions');
				const arrow = document.getElementById('tokenInstructionsArrow');
				const button = arrow.closest('button');
				const isCollapsed = instructions.classList.contains('max-h-0');
				
				if (isCollapsed) {
					// Expand
					instructions.classList.remove('max-h-0', 'opacity-0');
					instructions.classList.add('max-h-[2000px]', 'opacity-100');
					arrow.classList.add('rotate-180');
					button.setAttribute('aria-expanded', 'true');
				} else {
					// Collapse
					instructions.classList.add('max-h-0', 'opacity-0');
					instructions.classList.remove('max-h-[2000px]', 'opacity-100');
					arrow.classList.remove('rotate-180');
					button.setAttribute('aria-expanded', 'false');
				}
			}

			function copyToClipboard(elementId, button, directText) {
				const text = directText || document.getElementById(elementId).textContent;
				
				// Show success feedback function
				function showSuccess() {
					const copyIcon = button.querySelector('.copy-icon');
					const checkIcon = button.querySelector('.check-icon');
					if (copyIcon && checkIcon) {
						copyIcon.classList.add('hidden');
						checkIcon.classList.remove('hidden');
						
						// Reset after 2 seconds
						setTimeout(() => {
							copyIcon.classList.remove('hidden');
							checkIcon.classList.add('hidden');
						}, 2000);
					}
				}
				
				// Try modern clipboard API first (requires HTTPS)
				if (navigator.clipboard && window.isSecureContext) {
					navigator.clipboard.writeText(text).then(showSuccess).catch(err => {
						console.error('Clipboard API failed:', err);
						fallbackCopy(text, showSuccess);
					});
				} else {
					// Fallback for HTTP contexts
					fallbackCopy(text, showSuccess);
				}
			}
			
			function fallbackCopy(text, onSuccess) {
				const textarea = document.createElement('textarea');
				textarea.value = text;
				textarea.style.position = 'fixed';
				textarea.style.left = '-9999px';
				textarea.style.top = '-9999px';
				document.body.appendChild(textarea);
				textarea.focus();
				textarea.select();
				
				try {
					document.execCommand('copy');
					onSuccess();
				} catch (err) {
					console.error('Fallback copy failed:', err);
					alert('Copy failed. Please select and copy manually.');
				}
				
				document.body.removeChild(textarea);
			}

			function handleLoginFormSubmit(event) {
				event.preventDefault();
				
				const apiServerInput = document.getElementById('apiServerInput');
				const tokenInput = document.getElementById('tokenInput');
			const insecureSkipVerifyCheckbox = document.getElementById('insecureSkipVerify');
			const loginButton = document.getElementById('loginButton');
			const loginError = document.getElementById('loginError');
			const loginErrorMessage = document.getElementById('loginErrorMessage');
			const loginSuccess = document.getElementById('loginSuccess');
			const loginSuccessMessage = document.getElementById('loginSuccessMessage');

			loginError.classList.add('hidden');
			loginSuccess.classList.add('hidden');

			const apiServer = apiServerInput.value.trim();
			const token = tokenInput.value.trim();
			const insecureSkipVerify = insecureSkipVerifyCheckbox.checked;			
			if (!apiServer) {
					loginErrorMessage.textContent = 'Please provide the Kubernetes API server URL';
					loginError.classList.remove('hidden');
					return false;
				}
				
				if (!token) {
					loginErrorMessage.textContent = 'Please provide a service account token';
					loginError.classList.remove('hidden');
					return false;
				}

				loginButton.disabled = true;
				loginButton.textContent = 'Signing in...';

				const baseURL = document.body.dataset.baseUrl || '';
				fetch(baseURL + '/api/auth/login', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/x-www-form-urlencoded',
					},
					credentials: 'same-origin',
					body: new URLSearchParams({ token, apiServer, insecureSkipVerify: insecureSkipVerify.toString() }),
				})
				.then(response => {
					return response.json().then(data => ({ status: response.status, data }));
				})
				.then(({ status, data }) => {
					if (status !== 200) {
						const error = new Error(data.error || 'Login failed');
						error.details = data.details;
						throw error;
					}

					// Show success message
					loginSuccessMessage.textContent = 'Login successful! Redirecting...';
					loginSuccess.classList.remove('hidden');

					// Redirect to home page
					setTimeout(() => {
						window.location.href = baseURL + '/';
					}, 500);
				})
				.catch(error => {
					console.error('Login error:', error);
					loginErrorMessage.textContent = error.message || 'An error occurred during login';
					
					// Show technical details if available
					const detailsSection = document.getElementById('loginErrorDetailsSection');
					const detailsCode = document.querySelector('#loginErrorDetails code');
					if (error.details) {
						detailsCode.textContent = error.details;
						detailsSection.classList.remove('hidden');
					} else {
						detailsSection.classList.add('hidden');
					}
					
					loginError.classList.remove('hidden');
					loginButton.disabled = false;
					loginButton.textContent = 'Sign in';
				});

				return false;
			}
		</script>
	}
}

// PermissionsPage shows the user's Tinkerbell RBAC permissions.
// It loads immediately with loading indicators, then fetches each resource's permissions via HTMX.
templ PermissionsPage(cfg PageConfig, resources []ResourceInfo) {
	@Layout("Tinkerbell - Permissions", cfg.BaseURL) {
		<div class="flex h-screen bg-white dark:bg-darkBg">
			@MobileMenuOverlay()
			@Sidebar(cfg.Namespaces, cfg.BaseURL)
			<div class="flex-1 flex flex-col overflow-hidden">
				@Header()
				<main class="flex-1 overflow-y-auto p-6">
					<div class="max-w-7xl mx-auto">
						<div class="mb-6">
							<h1 class="text-2xl font-light text-gray-900 dark:text-white">Tinkerbell Permissions</h1>
							<p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
								View your service account's access to Tinkerbell resources
							</p>
						</div>
						
						<!-- Token Expiry Info -->
						<div id="tokenExpiryCard" class="mb-6 hidden">
							<div class="bg-white dark:bg-darkNav rounded-lg shadow-sm border border-gray-200 dark:border-darkBorder p-4">
								<div class="flex items-center gap-3">
									<div id="tokenExpiryIcon" class="flex-shrink-0">
										<!-- Icon will be set by JS -->
									</div>
									<div class="flex-1">
										<h3 class="text-sm font-medium text-gray-900 dark:text-white">Token Status</h3>
										<p id="tokenExpiryText" class="text-sm text-gray-600 dark:text-gray-400">
											<!-- Duration will be set by JS -->
										</p>
									</div>
									<div id="tokenExpiryBadge" class="flex-shrink-0">
										<!-- Badge will be set by JS -->
									</div>
								</div>
							</div>
						</div>
						<script>
							(function() {
								function getCookie(name) {
									const value = `; ${document.cookie}`;
									const parts = value.split(`; ${name}=`);
									if (parts.length === 2) return parts.pop().split(';').shift();
									return null;
								}

								function formatDuration(ms) {
									const totalSeconds = Math.floor(ms / 1000);
									const days = Math.floor(totalSeconds / 86400);
									const hours = Math.floor((totalSeconds % 86400) / 3600);
									const minutes = Math.floor((totalSeconds % 3600) / 60);
									
									const parts = [];
									if (days > 0) parts.push(`${days}d`);
									if (hours > 0) parts.push(`${hours}h`);
									if (minutes > 0 && days === 0) parts.push(`${minutes}m`);
									
									return parts.length > 0 ? parts.join(' ') : 'less than a minute';
								}

								function updateTokenExpiry() {
									const card = document.getElementById('tokenExpiryCard');
									const iconDiv = document.getElementById('tokenExpiryIcon');
									const textP = document.getElementById('tokenExpiryText');
									const badgeDiv = document.getElementById('tokenExpiryBadge');
									
									// Read expiry timestamp from token_expiry cookie (Unix timestamp in seconds)
									const expiryStr = getCookie('token_expiry');
									if (!expiryStr) {
										card.classList.add('hidden');
										return;
									}
									
									const expirySec = parseInt(expiryStr, 10);
									if (isNaN(expirySec)) {
										card.classList.add('hidden');
										return;
									}
									
									const expiryDate = new Date(expirySec * 1000);
									const now = new Date();
									const diffMs = expiryDate - now;
									
									card.classList.remove('hidden');
									
									if (diffMs <= 0) {
										// Expired
										iconDiv.innerHTML = '<svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path></svg>';
										textP.textContent = 'Your token has expired. Please log in again.';
										textP.className = 'text-sm text-red-600 dark:text-red-400';
										badgeDiv.innerHTML = '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">Expired</span>';
									} else if (diffMs < 3600000) {
										// Less than 1 hour - warning
										iconDiv.innerHTML = '<svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
										textP.textContent = `Expires in ${formatDuration(diffMs)} (${expiryDate.toLocaleString()})`;
										textP.className = 'text-sm text-amber-600 dark:text-amber-400';
										badgeDiv.innerHTML = '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-200">Expiring Soon</span>';
									} else {
										// Valid
										iconDiv.innerHTML = '<svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>';
										textP.textContent = `Expires in ${formatDuration(diffMs)} (${expiryDate.toLocaleString()})`;
										textP.className = 'text-sm text-gray-600 dark:text-gray-400';
										badgeDiv.innerHTML = '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">Valid</span>';
									}
								}
								
								// Update on page load
								updateTokenExpiry();
								
								// Update every minute
								setInterval(updateTokenExpiry, 60000);
							})();
						</script>
						
						<div class="bg-white dark:bg-darkNav rounded-lg shadow-sm border border-gray-200 dark:border-darkBorder overflow-hidden">
							<div class="overflow-x-auto">
								<table class="min-w-full divide-y divide-gray-200 dark:divide-darkBorder">
									<thead class="bg-gray-50 dark:bg-darkBg">
										<tr>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
												Resource
											</th>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
												API Group
											</th>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
												Scope
											</th>
											<th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
												Allowed Verbs
											</th>
										</tr>
									</thead>
									<tbody class="bg-white dark:bg-darkNav divide-y divide-gray-100 dark:divide-darkBorder">
										for _, res := range resources {
											@PermissionRowLoading(res.Resource, res.APIGroup, cfg.BaseURL)
										}
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</main>
			</div>
		</div>
	}
}

