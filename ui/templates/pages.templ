// NotFoundPage shows a styled 404 page for missing resources.
templ NotFoundPage(cfg PageConfig, resourceType, resourceName, resourceNamespace, backLink, backLinkLabel, message string) {
	@Layout("Not Found - " + resourceType, cfg.BaseURL) {
		<div class="flex h-screen bg-white dark:bg-darkBg">
			@MobileMenuOverlay()
			@Sidebar(cfg.Namespaces, cfg.BaseURL)
			<div class="flex flex-col flex-1 min-h-0 min-w-0">
				@Header()
				<div class="flex-1 overflow-y-auto overflow-x-hidden">
					<div class="p-6 bg-gray-50 dark:bg-darkBg max-w-full">
						@BackLink(backLinkLabel, backLink)
						<div class="flex items-center justify-center min-h-[60vh]">
							<div class="text-center max-w-md">
								<div class="mx-auto h-16 w-16 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center mb-6">
									<svg class="h-8 w-8 text-red-600 dark:text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
									</svg>
								</div>
								<h2 class="text-2xl font-light text-gray-900 dark:text-white mb-2">{ resourceType } Not Found</h2>
								<p class="text-gray-600 dark:text-gray-400 mb-4">
									The { resourceType } <span class="font-mono font-medium text-gray-900 dark:text-white">{ resourceNamespace }/{ resourceName }</span> does not exist.
								</p>
								if message != "" {
									<p class="text-sm text-gray-500 dark:text-gray-500 mb-6">{ message }</p>
								}
								<a href={ templ.SafeURL(backLink) } class="inline-flex items-center px-4 py-2 bg-tink-teal-600 hover:bg-tink-teal-700 text-white font-medium rounded-lg transition-colors">
									<svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
									</svg>
									Back to { backLinkLabel }
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
}

// LoginPage is the service token login page.
templ LoginPage(baseURL string) {
	@Layout("Tinkerbell - Login", baseURL) {
		<div class="min-h-screen flex flex-col bg-gray-50 dark:bg-darkBg">
			<!-- Dark/Light mode toggle in top-right corner -->
			<div class="fixed top-4 right-4 z-10">
				@DarkModeToggle()
			</div>
			<!-- Scrollable content area -->
			<div class="flex-1 overflow-y-auto flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
				<div class="max-w-md w-full space-y-8">
				<!-- Logo -->
				<div class="text-center">
					<img 
						src={ baseURL + "/artwork/Tinkerbell-Logo-Landscape-Dark-2.png" }
						alt="Tinkerbell Logo"
						class="h-16 w-auto dark:hidden mx-auto"
					/>
					<img 
						src={ baseURL + "/artwork/Tinkerbell-Logo-Landscape-Light-2.png" }
						alt="Tinkerbell Logo"
						class="h-16 w-auto hidden dark:block mx-auto"
					/>
					<h2 class="mt-6 text-center text-3xl font-light text-gray-900 dark:text-white">
						Sign In
					</h2>
				</div>

				<!-- Login Form -->
				<div class="mt-8 bg-white dark:bg-darkBorderSoft rounded-lg shadow px-4 py-5 sm:px-6">
					<form id="loginForm" onsubmit="return handleLoginFormSubmit(event)" class="space-y-6">
						<!-- API Server URL Input -->
						<div>
							<label for="apiServerInput" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
								Kubernetes API Server URL
							</label>
							<input 
								id="apiServerInput"
								name="apiServer"
								type="text"
							class="w-full px-3 py-2 border border-gray-300 dark:border-darkBorder rounded-lg shadow-sm focus:ring-tink-teal-500 focus:border-tink-teal-500 bg-white dark:bg-darkNav text-gray-900 dark:text-gray-100 text-sm placeholder-gray-400 dark:placeholder-gray-500"
								placeholder="https://kubernetes.default.svc or https://192.168.1.1:6443"
							/>
						</div>

						<!-- Token Input -->
						<div>
							<label for="tokenInput" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
								Service Account Token
							</label>
							<textarea 
								id="tokenInput"
								name="token"
								rows="6"
							class="w-full px-3 py-2 border border-gray-300 dark:border-darkBorder rounded-lg shadow-sm focus:ring-tink-teal-500 focus:border-tink-teal-500 bg-white dark:bg-darkNav text-gray-900 dark:text-gray-100 font-mono text-sm placeholder-gray-400 dark:placeholder-gray-500"
								placeholder="Paste your service account token here..."
							></textarea>
						</div>
					<!-- TLS Verification Checkbox -->
					<div class="flex items-center">
						<input 
							id="insecureSkipVerify"
							name="insecureSkipVerify"
							type="checkbox"
							class="h-4 w-4 text-tink-teal-600 focus:ring-tink-teal-500 border-gray-300 dark:border-darkBorder rounded"
						/>
						<label for="insecureSkipVerify" class="ml-2 flex items-center text-sm text-gray-700 dark:text-gray-300">
							Skip TLS verification (insecure)
							<div class="relative ml-1 group">
								<svg class="w-4 h-4 text-gray-400 dark:text-gray-500 cursor-help" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
								</svg>
								<div class="absolute left-0 bottom-6 mb-1 hidden group-hover:block w-64 p-2 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 text-xs rounded shadow-lg z-10">
									⚠️ Warning: Disabling TLS verification exposes you to man-in-the-middle attacks. Only use this for development/testing with self-signed certificates.
								</div>
							</div>
						</label>
					</div>
						<!-- Error Message -->
						<div id="loginError" class="rounded-lg bg-red-100 dark:bg-red-900 border border-red-300 dark:border-red-800 hidden">
							<div class="p-3">
								<div class="flex items-center">
									<svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
										<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
									</svg>
									<p class="text-sm text-red-800 dark:text-red-200 flex-1" id="loginErrorMessage"></p>
								</div>
							</div>
							<!-- Collapsible Details Section -->
							<div id="loginErrorDetailsSection" class="hidden border-t border-red-300 dark:border-red-800">
								<button 
									type="button"
									onclick="toggleErrorDetails()"
									class="w-full px-3 py-2 text-left text-xs text-red-700 dark:text-red-300 hover:bg-red-200 dark:hover:bg-red-800 transition-colors flex items-center justify-between"
								>
									<span class="font-medium">Technical details</span>
									<svg id="errorDetailsArrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
									</svg>
								</button>
								<div id="loginErrorDetails" class="max-h-0 overflow-hidden transition-all duration-200">
									<div class="px-3 pb-3">
										<code class="block text-xs bg-red-50 dark:bg-red-950 text-red-900 dark:text-red-100 p-2 rounded font-mono whitespace-pre-wrap break-all"></code>
									</div>
								</div>
							</div>
						</div>

						<!-- Success Message -->
						<div id="loginSuccess" class="p-3 rounded-lg bg-green-100 dark:bg-green-900 border border-green-300 dark:border-green-800 hidden">
							<div class="flex items-center">
								<svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
									<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
								</svg>
								<p class="text-sm text-green-800 dark:text-green-200" id="loginSuccessMessage"></p>
							</div>
						</div>

						<!-- Submit Button -->
						<button 
							type="submit"
							id="loginButton"
							class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-tink-teal-600 hover:bg-tink-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-tink-teal-500 dark:focus:ring-offset-darkBg transition-colors"
						>
							Sign in
						</button>
					</form>
				</div>

				<!-- Info -->
				<div class="mt-6 text-center text-xs text-gray-500 dark:text-gray-400">
					<p>Your token stays in your browser and is never saved on our servers.</p>
				</div>

				<!-- Collapsible Token Generation Instructions -->
				<div class="mt-4">
					<button 
						type="button"
						onclick="toggleTokenInstructions()"
						aria-expanded="false"
						aria-controls="tokenInstructions"
						class="w-full flex items-center justify-between px-4 py-3 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-darkBorderSoft rounded-lg hover:bg-gray-200 dark:hover:bg-darkBorder transition-colors"
					>
						<span class="flex items-center">
							<!-- Help/Question icon -->
							<svg class="w-5 h-5 mr-2 text-tink-teal-600 dark:text-tink-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
							How to generate a token
						</span>
						<svg id="tokenInstructionsArrow" class="w-5 h-5 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>
					<div id="tokenInstructions" class="overflow-hidden transition-all duration-300 ease-in-out max-h-0 opacity-0">
						<div class="mt-3 space-y-4">
							<!-- Step 1 -->
							<div class="bg-white dark:bg-darkBorderSoft rounded-lg border border-gray-200 dark:border-darkBorder p-4">
								<div class="flex items-start justify-between mb-2">
									<div class="flex items-center">
										<span class="flex items-center justify-center w-6 h-6 rounded-full bg-tink-teal-100 dark:bg-tink-teal-900 text-tink-teal-700 dark:text-tink-teal-300 text-xs font-bold mr-2">1</span>
										<h5 class="text-sm font-semibold text-gray-900 dark:text-white">Create a ServiceAccount</h5>
									</div>
									<button onclick="copyToClipboard('step1-code', this)" class="copy-btn p-1.5 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-darkBorder transition-colors" title="Copy to clipboard">
										<svg class="w-4 h-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
										</svg>
										<svg class="w-4 h-4 check-icon hidden text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
										</svg>
									</button>
								</div>
								<p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Creates a new service account that the dashboard will use to authenticate with your cluster.</p>
								<code id="step1-code" class="block text-xs bg-gray-100 dark:bg-darkBg text-gray-800 dark:text-gray-200 p-2 rounded-md font-mono">kubectl create serviceaccount my-admin-sa --namespace=tinkerbell</code>
							</div>

							<!-- Step 2 -->
							<div class="bg-white dark:bg-darkBorderSoft rounded-lg border border-gray-200 dark:border-darkBorder p-4">
								<div class="flex items-center mb-2">
									<span class="flex items-center justify-center w-6 h-6 rounded-full bg-tink-teal-100 dark:bg-tink-teal-900 text-tink-teal-700 dark:text-tink-teal-300 text-xs font-bold mr-2">2</span>
									<h5 class="text-sm font-semibold text-gray-900 dark:text-white">Grant permissions</h5>
								</div>
								<div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-md p-2 mb-3">
									<p class="text-xs text-yellow-800 dark:text-yellow-200">
										<strong>Note:</strong> If you previously created a ClusterRoleBinding, delete it first with: 
										<code class="bg-yellow-100 dark:bg-yellow-900/40 px-1 rounded">kubectl delete clusterrolebinding my-admin-sa-binding</code>
									</p>
								</div>
								<p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Choose one of the following permission levels:</p>
						
						<!-- Cluster-wide access option -->
						<div class="mt-3">
							<div class="flex items-start justify-between mb-1">
								<p class="text-xs font-semibold text-gray-700 dark:text-gray-300">Cluster-wide access:</p>
								<button onclick="copyToClipboard('step2-cluster-code', this)" class="copy-btn p-1 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-darkBorder transition-colors cursor-pointer" title="Copy to clipboard">
									<svg class="w-3.5 h-3.5 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
									</svg>
									<svg class="w-3.5 h-3.5 check-icon hidden text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
									</svg>
								</button>
							</div>
							<code id="step2-cluster-code" class="block text-xs bg-gray-100 dark:bg-darkBg text-gray-800 dark:text-gray-200 p-2 rounded-md font-mono">kubectl create clusterrolebinding my-admin-sa-binding --clusterrole=cluster-admin --serviceaccount=tinkerbell:my-admin-sa</code>
						</div>
						
						<!-- Namespace-specific access option -->
						<div class="mt-3">
							<div class="flex items-start justify-between mb-1">
								<p class="text-xs font-semibold text-gray-700 dark:text-gray-300">Or namespace-specific access (recommended):</p>
								<button onclick="copyToClipboard('step2-namespace-code', this)" class="copy-btn p-1 rounded-md text-gray-400 hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-darkBorder transition-colors cursor-pointer" title="Copy to clipboard">
									<svg class="w-3.5 h-3.5 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
