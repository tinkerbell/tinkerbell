// PermissionRow shows the loaded permission status for a resource.
templ PermissionRow(perm Permission) {
	<tr class="hover:bg-gray-50 dark:hover:bg-darkBorder transition-colors duration-150">
		<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
			{ perm.Resource }
		</td>
		<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
			<span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded font-mono">
				{ perm.APIGroup }
			</span>
		</td>
		<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
			if perm.Namespace == "" {
				if len(perm.Verbs) > 0 {
					<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
						All Namespaces
					</span>
				} else {
					<span class="text-gray-400 dark:text-gray-500">—</span>
				}
			} else {
				<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-200">
					{ perm.Namespace }
				</span>
			}
		</td>
		<td class="px-6 py-4 text-sm text-gray-700 dark:text-gray-300">
			if len(perm.Verbs) == 0 {
				<span class="text-gray-400 dark:text-gray-500 italic">No access</span>
			} else {
				<div class="flex flex-wrap gap-1">
					for _, verb := range perm.Verbs {
						@VerbBadge(verb)
					}
				</div>
			}
		</td>
	</tr>
}

// PermissionRowError shows an error state for a permission row.
templ PermissionRowError(resource, apiGroup string) {
	<tr class="hover:bg-gray-50 dark:hover:bg-darkBorder transition-colors duration-150 bg-red-50 dark:bg-red-900/20">
		<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
			{ resource }
		</td>
		<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
			<span class="text-xs bg-gray-100 dark:bg-gray-700 px-2 py-1 rounded font-mono">
				{ apiGroup }
			</span>
		</td>
		<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 dark:text-gray-300">
			<span class="text-gray-400 dark:text-gray-500">—</span>
		</td>
		<td class="px-6 py-4 text-sm text-red-600 dark:text-red-400">
			<span class="italic">Error checking permissions</span>
		</td>
	</tr>
}

// VerbBadge renders a colored badge for RBAC verbs.
templ VerbBadge(verb string) {
	switch verb {
		case "get", "list", "watch":
			<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
				{ verb }
			</span>
		case "create":
			<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
				{ verb }
			</span>
		case "update", "patch":
			<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-amber-100 text-amber-800 dark:bg-amber-800 dark:text-amber-100">
				{ verb }
			</span>
		case "delete":
			<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
				{ verb }
			</span>
		default:
			<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200">
				{ verb }
			</span>
	}
}
